<Page
	x:Class="TabletopRolePlayingCharacterManager.Views.CharacterSheet"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:TabletopRolePlayingCharacterManager"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:vm="using:TabletopRolePlayingCharacterManager.ViewModel">
	<Page.DataContext>
		<vm:CharacterSheetViewModel/>
	</Page.DataContext>

	<Page.Resources>
		<ResourceDictionary >
			<DataTemplate x:Key="Skill">
				<StackPanel Orientation="Vertical"
							Margin="4, 0, 4, 0"
							BorderBrush="DarkGray"
							BorderThickness="2">
					<StackPanel Orientation="Horizontal">
					<TextBlock Text="{Binding Path=Name}" VerticalAlignment="Center"
							   MinWidth="112"/>
						
					</StackPanel>
					<StackPanel Orientation="Horizontal">
						<TextBlock Text="{Binding Path=Bonus}"
								   Margin="8"
								   FontSize="18"/>
						<CheckBox IsChecked="{Binding Path=IsProficient, Mode=TwoWay}" MinWidth="32"/>
						<TextBlock Text="{Binding Path=MainStat}" HorizontalAlignment="Right" Foreground="#FF7E7E7E" Margin="4,0,0,0"
								  />
					</StackPanel>
				</StackPanel>
			</DataTemplate>

		</ResourceDictionary>
	</Page.Resources>
	<StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
						
						   MinWidth="336" Margin="0" Padding="12,0,12,0">


		<StackPanel Orientation="Vertical" Name="ClassAndRacePanel" MinWidth="336"
					BorderBrush="Black"
					BorderThickness="1">
			<Grid Tapped="GeneralTapped">
				<TextBlock Text="General"
							   VerticalAlignment="Center"
							   FontWeight="Bold"/>
				<TextBlock Text="-" FontSize="20" HorizontalAlignment="Right"
							   VerticalAlignment="Center"/>

			</Grid>
			<Grid Name="ClassAndRaceInfo"
				  HorizontalAlignment="Stretch"
				  >
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="2*"/>
					<RowDefinition Height="2*"/>
					<RowDefinition Height="2*"/>
				</Grid.RowDefinitions>
				<StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="0"
								 Margin="4, 0, 4, 0">
					<TextBox Text="{Binding Name, Mode=TwoWay}" />
					<TextBlock Text="Name"/>
				</StackPanel>
				<StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="0"
								 Margin="4, 0, 4, 0">
					<TextBox Text="{Binding Class, Mode=TwoWay}" />
					<TextBlock Text="Class"/>
				</StackPanel>
				<StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="2"
								 Margin="4, 0, 4, 0">
					<TextBox Text="{Binding Level, Mode=TwoWay}" />
					<TextBlock Text="Level"/>
				</StackPanel>
				<StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="1"
								 Margin="4, 0, 4, 0">
					<TextBox Text="{Binding Race, Mode=TwoWay}" />
					<TextBlock Text="Race"/>
				</StackPanel>
				<StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1"
								Margin="4, 0, 4, 0">
					<TextBox Text="{Binding Alignment, Mode=TwoWay}" />
					<TextBlock Text="Alignment"/>
				</StackPanel>
				<StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="2"
								Margin="4, 0, 4, 0">
					<TextBox Text="{Binding Experience, Mode=TwoWay}" />
					<TextBlock Text="Experience"/>
				</StackPanel>
			</Grid>
		</StackPanel>
		<StackPanel Orientation="Vertical" RelativePanel.Below="ClassAndRacePanel"
					Name="PhysicalDescriptionPanel" MinWidth="336"
					BorderBrush="Black"
					BorderThickness="1">
			<Grid Tapped="PhysicalDescriptionHeaderTapped">
				<TextBlock Text="Physical Description"
						   FontWeight="Bold"/>
				<TextBlock Text="-" FontSize="20" HorizontalAlignment="Right"
							   VerticalAlignment="Center"/>

			</Grid>

			<Grid Name="PhysicalDescription"
					 MinWidth="336">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="3*"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="2*"/>
					<RowDefinition Height="2*"/>
					<RowDefinition Height="2*"/>
				</Grid.RowDefinitions>
				<StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="0" 
								Margin="4, 0, 4, 0">
					<TextBox Text="{Binding Age}"/>

					<TextBlock Text="Age"/>
				</StackPanel>
				<StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="1"
								 Margin="4, 0, 4, 0">
					<TextBox Text="{Binding Height}" />

					<TextBlock Text="Height"/>
				</StackPanel>
				<StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="2" 
								Margin="4, 0, 4, 0">
					<TextBox Text="{Binding Weight}"/>

					<TextBlock Text="Weight"/>
				</StackPanel>
				<StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="0"
								Margin="4, 0, 4, 0">
					<TextBox Text="{Binding Eyes}" />

					<TextBlock Text="Eyes"/>
				</StackPanel>
				<StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1"
								Margin="4, 0, 4, 0">
					<TextBox Text="{Binding Skin}" />

					<TextBlock Text="Skin"/>
				</StackPanel>
				<StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="2"
								Margin="4, 0, 4, 0">
					<TextBox Text="{Binding Hair}" />

					<TextBlock Text="Hair"/>
				</StackPanel>
			</Grid>
		</StackPanel>
		<StackPanel Name="AbilityScoresStackPanel"
					Orientation="Vertical"
					RelativePanel.Below="PhysicalDescriptionPanel"
					RelativePanel.AlignRightWith="PhysicalDescriptionPanel"
					RelativePanel.AlignLeftWith="PhysicalDescriptionPanel"
					BorderBrush="Black"
					BorderThickness="1">

			<Grid Tapped="AbilityScoresHeaderTapped">
				<TextBlock Text="Ability Scores"
						   FontWeight="Bold"
						    VerticalAlignment="Center"/>
				<TextBlock Text="-" FontSize="20" HorizontalAlignment="Right"
							   VerticalAlignment="Center"/>

			</Grid>
			<VariableSizedWrapGrid MaximumRowsOrColumns="3"
								   Orientation="Horizontal"
								   Name="AbilityScores">

				<StackPanel Orientation="Vertical"
							Margin="4, 0, 4, 0"
							BorderBrush="DarkGray"
							BorderThickness="2">
					<TextBlock Text="Strength" VerticalAlignment="Center"/>

					<StackPanel Orientation="Horizontal">
						<TextBox Text="{Binding Strength, Mode=TwoWay}" InputScope="Number"/>
						<CheckBox IsChecked="{Binding StrIsProficient, Mode=TwoWay}" MinWidth="32"/>
					</StackPanel>
				</StackPanel>

				<StackPanel Orientation="Vertical"
							Margin="4, 0, 4, 0">

					<TextBlock Text="Dexterity" VerticalAlignment="Center"/>

					<StackPanel Orientation="Horizontal">
						<TextBox Text="{Binding Dexterity, Mode=TwoWay}"/>
						<CheckBox IsChecked="{Binding DexIsProficient, Mode=TwoWay}"/>
					</StackPanel>
				</StackPanel>

				<StackPanel Orientation="Vertical">
					<TextBlock Text="Constitution" VerticalAlignment="Center"/>

					<StackPanel Orientation="Horizontal">
						<TextBox Text="{Binding Constitution, Mode=TwoWay}"/>
						<CheckBox IsChecked="{Binding ConIsProficient, Mode=TwoWay}"/>
					</StackPanel>
				</StackPanel>

				<StackPanel Orientation="Vertical">
					<TextBlock Text="Intelligence" VerticalAlignment="Center"/>

					<StackPanel Orientation="Horizontal">
						<TextBox Text="{Binding Intelligence, Mode=TwoWay}"/>
						<CheckBox IsChecked="{Binding IntIsProficient, Mode=TwoWay}"/>
					</StackPanel>
				</StackPanel>

				<StackPanel Orientation="Vertical">
					<TextBlock Text="Wisdom" VerticalAlignment="Center"/>

					<StackPanel Orientation="Horizontal">
						<TextBox Text="{Binding Wisdom, Mode=TwoWay}"/>
						<CheckBox IsChecked="{Binding WisIsProficient, Mode=TwoWay}"/>
					</StackPanel>
				</StackPanel>

				<StackPanel Orientation="Vertical">
					<TextBlock Text="Charisma" VerticalAlignment="Center"/>

					<StackPanel Orientation="Horizontal">
						<TextBox Text="{Binding Charisma, Mode=TwoWay}"/>
						<CheckBox IsChecked="{Binding ChaIsProficient, Mode=TwoWay}"/>
					</StackPanel>
				</StackPanel>






			</VariableSizedWrapGrid>
		</StackPanel>

		<GridView Name="Skills" RelativePanel.Below="AbilityScoresStackPanel"
				  ItemTemplate="{StaticResource Skill}"
				  ItemsSource="{Binding Skills}">

		</GridView>

	</StackPanel>
</Page>